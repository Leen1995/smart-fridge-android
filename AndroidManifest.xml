<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smart_fridge_android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />

    <!-- Allow to connect with internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/fridge_icon"
        android:label="@string/app_name" >
        <activity
            android:name="com.example.smart_fridge_android.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.smart_fridge_android.RegisterActivity" />
        <activity android:name="com.example.smart_fridge_android.AddRecipeActivity" />
        <activity android:name="com.example.smart_fridge_android.MainActivity" />
        <activity 
            android:name="com.example.smart_fridge_android.AddFoodActivity" >
            <intent-filter>
        		<action android:name="android.intent.action.VIEW"/>
        		<category android:name="android.intent.category.DEFAULT"/>
        		<category android:name="android.intent.category.BROWSABLE"/>
        		<data android:scheme="http" android:host="zxing.appspot.com" android:path="/scan"/>
      		</intent-filter>
            </activity>
        <activity android:name="com.example.smart_fridge_android.IndividualRecipeActivity" />
        <activity android:name="com.example.smart_fridge_android.Individual_Food_Item" />
        
    </application>

</manifest>
