<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smart_fridge_android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <!-- Allow to connect with internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera"
                  android:required="false" />
    

    <application
        android:icon="@drawable/fridge_icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar">
        <activity
            android:name="com.example.smart_fridge_android.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.smart_fridge_android.RegisterActivity" />
        <activity android:name="com.example.smart_fridge_android.AddRecipeActivity" />
        <activity android:name="com.example.smart_fridge_android.MainActivity" />
        <activity android:name="com.example.smart_fridge_android.AddFoodActivity" />
        <activity android:name="com.example.smart_fridge_android.IndividualRecipeActivity" />
        <activity android:name=".IndividualFoodActivity" />
    </application>

</manifest>
