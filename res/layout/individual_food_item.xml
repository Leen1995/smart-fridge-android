<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/foodItemNavBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/main_nav_bar" />

    <TextView
        android:id="@+id/individualFoodItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodItemNavBar"
        android:layout_marginRight="43dp"
        android:layout_marginTop="37dp"
        android:layout_toLeftOf="@+id/FoodName"
        android:text="Name: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/individualFoodItemQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/individualFoodItemName"
        android:layout_below="@+id/individualFoodItemName"
        android:layout_marginTop="32dp"
        android:text="Quantity: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/individualFoodItemExpirationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/individualFoodItemQuantity"
        android:layout_below="@+id/individualFoodItemQuantity"
        android:layout_marginTop="33dp"
        android:text="Expiration\nDate: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/individualFoodItemNutritionalInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/individualFoodItemExpirationDate"
        android:layout_below="@+id/individualFoodItemExpirationDate"
        android:layout_marginTop="31dp"
        android:text="Nutritional\nInformation: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/FoodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/individualFoodItemName"
        android:layout_alignBottom="@+id/individualFoodItemName"
        android:layout_toRightOf="@+id/DeleteButton"
        android:text="name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/FoodQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/individualFoodItemQuantity"
        android:layout_alignBottom="@+id/individualFoodItemQuantity"
        android:layout_toRightOf="@+id/individualFoodItemName"
        android:text="quantity"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/ExpDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/individualFoodItemExpirationDate"
        android:layout_alignBottom="@+id/individualFoodItemExpirationDate"
        android:layout_toRightOf="@+id/individualFoodItemName"
        android:text="expirationdate"
        android:textSize="20sp" />

    <Button
        android:id="@+id/DeleteButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="45dp"
        android:layout_marginLeft="74dp"
        android:onClick="onButtonClick"
        android:text="Delete Item" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/individualFoodItemNutritionalInfo"
        android:layout_alignBottom="@+id/individualFoodItemNutritionalInfo"
        android:layout_toRightOf="@+id/DeleteButton"
        android:text="nutringgoeshere"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/individualFoodItemNutritionalInfo"
        android:layout_marginTop="20dp"
        android:text="Image Path:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/imgPathView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignLeft="@+id/textView8"
        android:text="TextView" />

</RelativeLayout>