<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

    <include
            android:id="@+id/foodItemNavBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/main_nav_bar" />

    <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                <EditText
                        android:id="@+id/FoodName"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:layout_alignTop="@+id/individualFoodItemName"
                        android:layout_toRightOf="@+id/individualFoodItemName" android:layout_marginLeft="70dp"/>

                <TextView
                    android:id="@+id/individualFoodItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="Name: "
                    android:textSize="20sp" />

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                <EditText
                        android:id="@+id/FoodQuantity"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="quantity"
                        android:textSize="20sp"
                        android:layout_alignParentTop="true" 
                        android:layout_toRightOf="@+id/individualFoodItemQuantity"
                        android:layout_marginLeft="50dp"/>

                <TextView
                    android:id="@+id/individualFoodItemQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="Quantity: "
                    android:textSize="20sp" />

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                <TextView
                        android:id="@+id/individualFoodItemExpirationDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expiration\nDate: "
                        android:textSize="20sp" android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
                        android:layout_marginLeft="20dp"/>

                <TextView
                        android:id="@+id/ExpDate"
                        style="@android:style/Widget.DeviceDefault.Spinner"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:ems="10" android:layout_centerVertical="true" android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                <TextView
                        android:id="@+id/individualFoodItemNutritionalInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nutritional\nInformation: "
                        android:textSize="20sp"
                        android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" 
                        android:layout_marginTop="10dp"
						android:layout_marginLeft="20dp"
						/>

                <EditText
                    android:id="@+id/nutritionalInformationText"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:text="nutringgoeshere"
                    android:layout_marginLeft="50dp"
                    android:textSize="20sp" />

                </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                <ImageView
                        android:id="@+id/imgView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"/>

                <Button
                    android:id="@+id/update_button"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="100dp"
                    android:onClick="onButtonClick"
                    android:layout_marginTop="20dp"
                    android:text="Update" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/update_button"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/imgView"
                    android:text="Image:"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </RelativeLayout>

            <Button
                android:id="@+id/DeleteButton"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="10dp"
                android:onClick="onButtonClick"
                android:text="Delete Item" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
